---
const { maxWidth = '720px' } = Astro.props;
---

<div class="container">
  <slot />
</div>
<style define:vars={{ maxWidth }}>
  @layer layout {
    .container {
      max-width: var(--maxWidth);
      padding-inline: 1em;
      margin-inline: auto;
    }
    .container .container {
      padding-inline: 0;
    }
  }
</style>
