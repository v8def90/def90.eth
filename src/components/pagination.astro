---
const { prev, next, prevTitle = '前へ', nextTitle = '次へ' } = Astro.props;
---

<div class="flex-spacebetween mt-10 flex flex-wrap items-center justify-between gap-4">
  {
    prev ? (
      <a class="text-inherit no-underline hover:underline" rel="prefetch" href={prev}>
        ← {prevTitle}
      </a>
    ) : (
      <span />
    )
  }
  {
    next ? (
      <a class="text-inherit no-underline hover:underline" rel="prefetch" href={next}>
        {nextTitle} →
      </a>
    ) : (
      <span />
    )
  }
</div>
